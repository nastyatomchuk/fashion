<!-- breadcrumb-area start -->
<div class="breadcrumb-area">
  <div class="container">
    <div class="row align-items-center justify-content-center">
      <div class="col-12 text-center">
        <h2 class="breadcrumb-title">Корзина</h2>
        <!-- breadcrumb-list start -->
        <ul class="breadcrumb-list">
          <li class="breadcrumb-item"><a href="<%=home_index_path %>">Главная</a></li>
          <li class="breadcrumb-item active">Корзина</li>
        </ul>
        <!-- breadcrumb-list end -->
      </div>
    </div>
  </div>
</div>

<!-- breadcrumb-area end -->

<!-- Cart Area Start -->
<div class="cart-main-area pt-100px pb-100px">
  <div class="container">
    <h3 class="cart-page-title">Корзина</h3>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 col-12">
        <form action="#">
          <div class="table-content table-responsive cart-table-content">
            <table>
              <thead>
              <tr>
                <th></th>
                <th>Наименование</th>
                <th>Размер</th>
                <th>Цена</th>
                <th>Количество</th>
                <th>Итого</th>
                <th></th>
              </tr>
              </thead>
              <tbody>
              <% @cart_items.each do |item| %>
                <%= form_with model: item do |f|%>
                  <tr>
                    <td class="product-thumbnail">
                      <a href="<%= product_path(item.product.id)%>"><%= image_tag(item.product.images.first.url, class: "img-responsive m-auto", alt: "") %></a>
                    </td>
                    <td class="product-name"><a href="<%= home_path(item.product.id)%>"><%= item.product.title%></a></td>
                    <td class="product-subtotal"><%=item.unit_size%></td>
                    <td class="product-price-cart"><span class="amount"><%= in_dollars(item.unit_price)%></span></td>
                    <td class="product-name"><%= item.quantity%></td>
                    <td class="product-subtotal"><%=in_dollars(item.total)%></td>
                    <td class="product-remove">
                      <%= link_to "", item, method: :delete, remote: true, class: "fa fa-times" %>
                    </td>
                  </tr>
                <% end%>
              <% end %>
              </tbody>
              <tfoot>
              <tr>
                <td colspan="6" align="right"><h5>Сумма: <%=  in_dollars(current_cart.subtotal) %></h5></td>
              </tr>
              </tfoot>
            </table>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <div class="cart-shiping-update-wrapper">
                <div class="cart-shiping-update">
                  <a href="<%=home_index_path %>">Вернуться в каталог</a>
                </div>
                <div class="cart-clear">
                  <a href="<%= cart_path %>">Обновить корзину</a>
                  <% if user_signed_in? %>
                    <% if @cart_items.count > 0 %>
                      <a href="<%=order_index_path %>">Оформить</a>
                    <%end %>
                  <% else %>
                    <%= link_to 'Sign In', new_user_session_path, class: "header-action-btn login-btn" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
</div>
</div>
<!-- Cart Area End -->
