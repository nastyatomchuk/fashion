<!-- breadcrumb-area start -->
<div class="breadcrumb-area">
  <div class="container">
    <div class="row align-items-center justify-content-center">
      <div class="col-12 text-center">
        <h2 class="breadcrumb-title">Shop</h2>
        <!-- breadcrumb-list start -->
        <ul class="breadcrumb-list">
          <li class="breadcrumb-item"><a href="<%=home_index_path %>">Home</a></li>
          <li class="breadcrumb-item active">Cart</li>
        </ul>
        <!-- breadcrumb-list end -->
      </div>
    </div>
  </div>
</div>

<!-- breadcrumb-area end -->

<!-- Cart Area Start -->
<div class="cart-main-area pt-100px pb-100px">
  <div class="container">
    <h3 class="cart-page-title">Your cart items</h3>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 col-12">
        <form action="#">
          <div class="table-content table-responsive cart-table-content">
            <table>
              <thead>
              <tr>
                <th>Image</th>
                <th>Product Name</th>
                <th>Price</th>
                <th colspan="2" >Action</th>
              </tr>
              </thead>
              <tbody>
              <% @cart_items.each do |item| %>
                <%= form_with model: item do |f|%>
              <tr>
                <td class="product-thumbnail">
                  <a href="<%= home_path(item.product.id)%>"> <img class="img-responsive m-auto" src="<%=item.product.images.first.url %>" alt="Product" />
                  </a>
                </td>
                <td class="product-name"><a href="<%= home_path(item.product.id)%>"><%= item.product.title%></a></td>
                <td class="product-price-cart"><span class="amount"><%= item.product.price%></span></td>
                <td class="product-remove">
                  <%= f.submit "Update", class: "btn btn-light" %>
                </td>
                <td class="product-remove">
                  <%= link_to "", item, method: :delete, remote: true, class: "fa fa-times" %>
                </td>
              </tr>
                <% end%>
              <% end %>
              </tbody>
            </table>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <div class="cart-shiping-update-wrapper">
                <div class="cart-shiping-update">
                  <a href="<%=home_index_path %>">Continue Shopping</a>
                </div>
                <div class="cart-clear">
                  <a href="<%= cart_path %>">Update Shopping Cart</a>
                  <% if user_signed_in? %>
                    <a href="<%=order_path %>">Checkout</a>
                  <% else %>
                  <%= link_to 'Sign In', new_user_session_path, class: "header-action-btn login-btn" %>
                  <% end %>
<!--                  <a href="<%#=order_path %>">Checkout</a>-->
                </div>
              </div>
            </div>
          </div>
        </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Cart Area End -->
