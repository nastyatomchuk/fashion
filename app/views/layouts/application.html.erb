<!DOCTYPE html>
<html>
<head>
  <title>Fashion</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
<% flash.each do |name, message| %>
  <div id="flash_message" style="display: none" flash-type="<%= flash_type(name) %>">
    <%= message %>
  </div>
<% end %>

<header>
  <div class="header-main sticky-nav ">
    <div class="container position-relative">
      <div class="row">
        <div class="col-auto align-self-center">
          <div class="header-logo">
            <a href="<%=home_index_path %>"><%=image_tag "logo/veronika (1).png" %></a>
          </div>
        </div>
        <div class="col align-self-center d-none d-lg-block">
          <div class="main-menu">
            <ul>
              <li><a href="<%=home_index_path %>"> Главная </a></li>
              <li class="dropdown "><a href="<%=products_path %>">Категории <i class="pe-7s-angle-down"></i></a>
                <ul class="sub-menu">
                  <% catedories.each do |category| %>
                    <li><a href="<%=category_path(category.id) %>"><%= category.name%></a></li>
                  <%end %>
                </ul>
              </li>
              <li><a href="<%= about_path %>">О нас</a></li>
            </ul>
          </div>
        </div>
        <!-- Header Action Start -->
        <div class="col col-lg-auto align-self-center pl-0">
          <div class="header-actions">
            <% if user_signed_in? %>
              <span>Здравствуйте, <%= current_user.full_name %></span>
              <%= link_to 'Выйти', destroy_user_session_path, :method => :delete, class: "header-action-btn login-btn", data: { confirm: 'Вы уверены что хотите выйти из профиля? Все товары из корзины будут удалены.'}%>
            <% else %>
              <%= link_to 'Войти', new_user_session_path, class: "header-action-btn login-btn" %>
            <% end %>
            <!-- Single Wedge End -->
            <a href="<%=cart_path %>"
               class="header-action-btn header-action-btn-cart offcanvas-toggle pr-0">
              <i class="pe-7s-shopbag"></i>
              <span class="header-action-num"><%= CartItem.all.count %></span>
            </a>
          </div>
          <!-- Header Action End -->
        </div>
      </div>
    </div>
  </div>
</header>
</div>

<!--<div class ="container">-->
  <%= yield %>
<!--</div>-->

