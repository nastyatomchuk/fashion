<!-- breadcrumb-area start -->
<div class="breadcrumb-area">
  <div class="container">
    <div class="row align-items-center justify-content-center">
      <div class="col-12 text-center">
        <h2 class="breadcrumb-title">Каталог</h2>
        <!-- breadcrumb-list start -->
        <ul class="breadcrumb-list">
          <li class="breadcrumb-item"><a href="<%= home_index_path %>">Главная</a></li>
          <li class="breadcrumb-item active">Каталог</li>
        </ul>
        <!-- breadcrumb-list end -->
      </div>
    </div>
  </div>
</div>
<!-- breadcrumb-area end -->

<!-- Shop Page Start  -->
<div class="shop-category-area pt-100px pb-100px">
  <div class="container">
    <div class="row">
      <div class="col-lg-9 order-lg-last col-md-12 order-md-first">
        <!-- Shop Bottom Area Start -->
        <div class="shop-bottom-area">

          <!-- Tab Content Area Start -->
          <div class="row">
            <div class="col">
              <div class="tab-content">
                <div class="tab-pane fade active show " id="shop-grid">
                  <div class="row mb-n-30px">
                    <% @products.each do |product| %>
                      <div class="col-lg-4 col-md-6 col-sm-6 col-xs-6 mb-30px" data-aos="fade-up"
                           data-aos-delay="200">
                        <!-- Single Prodect -->
                        <div class="product">
                          <div class="thumb">
                            <a href="<%=product_path(product.id) %>" class="image">
                              <img src="<%=product.images.first.url %>" alt="Product" width="270" height="310" />
                            </a>
                          </div>
                          <div class="content">
                            <h5 class="title"><a href="<%=product_path(product.id) %>"><%=product.title %></a>
                            </h5>
                            <span class="price">
                            <span class="new"><%=in_dollars(product.price) %></span>
                          </span>
                          </div>
                        </div>
                      </div>
                    <%end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- Tab Content Area End -->
          <!--  Pagination Area Start -->

          <!--          <div class="load-more-items text-center mb-md-60px mb-lm-60px mt-30px0px" data-aos="fade-up">-->
          <!--            <a href="#" class="btn btn-lg btn-primary btn-hover-dark m-auto"> Load More <i-->
          <!--              class="fa fa-refresh ml-15px" aria-hidden="true"></i></a>-->
          <!--          </div>-->

          <!--  Pagination Area End -->
        </div>
        <!-- Shop Bottom Area End -->
      </div>
      <!-- Sidebar Area Start -->
      <div class="col-lg-3 order-lg-first col-md-12 order-md-last mb-md-60px mb-lm-60px">
        <div class="shop-sidebar-wrap">
          <!-- Sidebar single item -->
          <div class="sidebar-widget-search">
            <%= form_tag(products_path, method: :get, id: "widgets-searchbox" ) do  %>
              <%=text_area_tag(:search, params[:search], class: "input-field", placeholder: "Поиск") %>
              <button class="widgets-searchbox-btn" type="submit">
                <i class="fa fa-search"></i>
              </button>
            <%end %>
          </div>

          <!-- Sidebar single item -->
          <div class="sidebar-widget">
            <h4 class="sidebar-title">Категории: </h4>
            <div class="sidebar-widget-category">
              <ul>
                <% @categories.each do |category| %>
                  <li><a href="<%=category_path(category.id) %>" class="selected m-0"><%=category.name%>
                    <span> (<%= Product.where(category_id: category.id).count %>)</span></a>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
          <!-- Sidebar single item -->
          <div class="sidebar-widget">
            <h4 class="sidebar-title">Size</h4>
            <div class="sidebar-widget-list size">
              <ul>
                <li><a class="gray" href="<%=products_path(size: "S") %>">S</a></li>
                <li><a class="gray" href="<%=products_path(size: "M") %>">M</a></li>
                <li><a class="gray" href="<%=products_path(size: "L") %>">L</a></li>
                <li><a class="gray" href="<%=products_path(size: "XL") %>">XL</a></li>
                <li><a class="gray" href="<%=products_path(size: "XXL") %>">XXL</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Shop Page End  -->
