<%= simple_form_for @product do |form| %>
  <%= form.input :title, label: "Title",  class: "form-control #{field_validity_class(product, :title)}"  %>
  <%= filed_errors(product, :title) %>

  <%= form.input :description, label: "Description",  class: "form-control #{field_validity_class(product, :description)}"  %>
  <%= filed_errors(product, :description) %>
  
  <%= form.input :image, label: "Image",  class: "form-control #{field_validity_class(product, :image)}"  %>
  <%= filed_errors(product, :image) %>

  <%= form.association :category, label_method: :title, value_method: :id, include_blank: false, prompt: "< Choose category >" %>

  <%= form.button :submit%>
<% end %>
