<div class="dictionary">
  <%= new_right_button(new_admin_user_path) %>
  <h1>Users (<%= @users.size %>)</h1>

  <table class="table table-bordered">
    <thead>
    <tr>
      <th>ID</th>
      <th></th>
      <th>Full name</th>
      <th>Phone</th>
      <th>Email address</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class = "table-col-width"><%= user.id %></td>
        <td class = "table-col-width"><%= edit_button(edit_admin_user_path(user)) %></td>
        <td><%= link_to  user.full_name, admin_user_path(user) %></td>
        <td><%= user.phone %></td>
        <td><%= user.email %></td>
        <td class = "table-col-width"><%= destroy_button(admin_user_path(user), 'delete') %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
