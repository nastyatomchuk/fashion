<div class="dictionary">
  <%= new_right_button(new_admin_product_path) %>
  <h1>Products (<%= @products.size %>)</h1>

  <table class="table table-bordered">
    <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @products.each do |product| %>
      <tr>

        <td><%= product.title %></td>
        <td><%= truncate(product.description, length: 150) %></td>
        <td><%= product.price %></td>
        <td><%= product.store_qty %></td>
        <% product.images.each do |image| %>
          <td>
            <%=image_tag(image.small_preview.url) %>
          </td>
        <%end %>
        <td><%= link_to 'Show', admin_product_path(product), class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_admin_product_path(product), class: "btn btn-secondary" %></td>
        <td><%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>


