<div class="dictionary">
  <%= new_right_button(new_admin_product_path) %>
  <h1>Товары (<%= @products.size %>)</h1>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th class="th-18 text-nowrap">ID</th>
        <th class="th-18"></th>
        <th class="text-nowrap th-18">Наименование</th>
        <th class="th-18"></th>
        <th>Описание</th>
        <th>Цена</th>
        <th class="th-18">Артикул</th>
        <th class="th-18"></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td class="text-end"><%= product.id %></td>
          <td><%= edit_link(edit_admin_product_path(product)) %></td>
<!--          <td class="text-nowrap"><%#= link_to  product.title, admin_product_path(product) %></td>-->
          <td class="text-nowrap"><%= product.title %></td>
          <td><%= image_tag(product.images.first.url, :size => "50x50") %></td>
          <td><%= truncate(product.description, length: 150) %></td>
          <td class="text-end"><%= in_dollars(product.price) %></td>
          <td class="text-end"><%= product.sku %></td>
          <td><%= destroy_link(admin_product_path(product)) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
