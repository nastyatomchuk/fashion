<h1>Products</h1>

<%= link_to 'New Product', new_admin_product_path, class: "btn btn-primary float-end" %>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= truncate(product.description, length: 150) %></td>
        <td><%= product.price %></td>
        <td><%= product.store_qty %></td>
        <td><%= image_tag(product.image.url, alt: 'Image', :size => "150x200") if product.image? %></td>
        <td><%= link_to 'Show', admin_product_path(product), class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_admin_product_path(product), class: "btn btn-secondary" %></td>
        <td><%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

