<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <%= image_tag(@product.image.url, alt: 'Image', :size => "250x350") if @product.image? %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @product.store_qty %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<%= link_to 'Edit', edit_admin_product_path(@product), class: "btn btn-primary" %> |
<%= link_to 'Back', admin_products_path, class: "btn btn-secondary" %>
