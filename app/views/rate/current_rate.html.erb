<div class="container" style="margin-top: 30px">
  <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
    <p class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
      <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
      <span class="fs-4">Admin</span>
    </p>

    <nav style="--bs-breadcrumb-divider: '|';" aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
        <li class="breadcrumb-item active" aria-current="page">Current rates</li>
      </ol>
    </nav>
  </header>
</div>

<p><h1>Current rates of foreign currencies against the ruble</h1></p>

<% currency_rate = currency_rates %>
<% currency_rate_last_update = currency_rate["time_last_update_utc"] %>

<figcaption class="blockquote-footer">
  <%= "Last update: #{currency_rate_last_update.to_s}" %>
</figcaption>
<br>
<table class="table">
  <thead>
  <tr>
    <th>Currency code</th>
    <th>Rate</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% currency_rate['conversion_rates'].each_pair do |key, value|  %>
    <tr>
      <td><%= key %></td>
      <td><%= "#{'%.4f' % value}" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
